<div id="home_page">
	<div class='lcolumn'>
		<div id="addpost">
			<%= form_for @post do |p| %>
				<%= p.label :title %>
				<%= p.text_field :title, :class => "user_input"%>
				<br>
				<br>
				<%= p.label :content %>
				<%= p.text_area :content, cols: "35", rows: "5", :class => "text_area" %>
				<%= p.hidden_field :user_id, :value => @user.id %>
				<%= p.submit :class => "button top_space" %>
			<% end %>
		</div>
	</div>
	<div class='feed'>
		<% @posts.reverse.each do |p| %>
			<div class='posts'>
				<h2 class="snug underline"><%= link_to p.title, p %></h2>
				<h3 class="snug">by <%= link_to p.user.username, p.user %></h3>
				<p> <%= p.content %> </p>
				<p><%= p.comments.count %> Comments</p>
			</div>
		<% end %>
	</div>
</div>