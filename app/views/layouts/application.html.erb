<!DOCTYPE html>
<html>
<head>
  <title>GroupProjectRailsBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:alert] %>
	<div class="alert"><%= flash[:alert] %></div>
<% end %>


<% if current_user %>
<h2> You are currently logged in as <%= current_user.username %> </h2>
	<ul>
		<li> <%= link_to "Home", '/' %>
		<li> <%= link_to "New Post", new_post_path %> </li>
		<li> <%= link_to "Account Settings", edit_user_path(current_user) %> </li>
		<li> <%= link_to "Log Out", '/log-out' %> </li>
	</ul>
<%else %>
	<ul>
		<li> <%= link_to "Log In", log_in_path %> </li>
		<li> <%= link_to "Sign Up", new_user_path %> </li>
	</ul>
<% end %>

<h5><%= link_to "All Posts", posts_path %></h4>

<%= yield %>

</body>
</html>
