<div id="page">
	<div id="modal">
	</div>
	<div id="useredit">
		<div id="delete_confirm">
			<p>
				Are you sure you want to delete your account?
			</p>
			<p>
				If so, please enter your password
			</p>
			<!-- note: form doesn't actually matter at the moment -->
			<%= form_for(verify_user_path) do |d| %>
				<%= d.label :password1, "Password" %>
				<%= d.password_field :password1, :class => "user_input" %>
				<br> 
				<br>
				<%= d.label :password2, "Confirm Password" %>
				<%= d.password_field :password2, :class => "user_input" %>
				<br> 
				<br>
			<% end %>
			<%= link_to "Delete Account", @user, method: :delete, :class => "delete_button" %>
		</div>
		<h1>Edit User</h1>
		<%= form_for @user do |f|%>
			<%= f.label :username %>
			<%= f.text_field :username, :class => "user_input"%>
			<br>
			<br>
			<%= f.label :fname %>
			<%= f.text_field :fname, :class => "user_input"%>
			<br>
			<br>
			<%= f.label :lname %>
			<%= f.text_field :lname, :class => "user_input"%>
			<br>
			<br>
			<%= f.label :password %>
			<%= f.password_field :password, :class => "user_input"%>
			<br>
			<br>
			<%= f.submit :class => "button" %>
		<% end %>
		<br>
		<br>
		<button id="delete_button" class="button">Delete User</button>
	</div>
	<div id="avatar_upload">
		<%= form_for @user, :html => {:multipart => true} do |f| %>
		  <p>
		    <h2>My Avatar</h2>
		    <!-- displays the users avatar if they already have one uploaded -->
		    <%= image_tag(@user.avatar.profile) if @user.avatar? %>
		    <br>
		    <br>
		    <%= f.label :remote_avatar_url, "Image URL" %>
		    <%= f.text_field :remote_avatar_url, :class => "user_input" %>
		    <br>
		    <br>
		    <div id="upload_container">
			    <div class="upload_wrapper">
			        <%= f.file_field :avatar%>
			    </div>
			    <button class="button">Select a file</button>
			</div>
		    <%= f.hidden_field :avatar_cache %>
		    <%= f.submit :class => "button top_space" %>
		  </p>
		<% end %>
	</div>
</div>